}

impliedval16: reg3_5 is reg3_5 & (target3_5=0 | target3_5=1 | target3_5=2 | target3_5=3 | target3_5=7) & doublebyte=1 {
	local tmp:2 = zext(*:1 reg3_5);
	tmp = tmp | (zext(*:1 reg3_5) << 8);
	export tmp;
