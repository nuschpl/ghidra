}

impliedval16: reg3_5 is reg3_5 & target3_5=6 & doublebyte=1 {
	reg3_5 = reg3_5 - 1;
	local tmp:2 = zext(*:1 reg3_5);
	reg3_5 = reg3_5 - 1;
	tmp = tmp | (zext(*:1 reg3_5) << 8);
